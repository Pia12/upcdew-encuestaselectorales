<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>
    <form-bean name="encuestasForm" type="pe.edu.upc.dew.proyectoencuestas.form.EncuestaForm"/>
     
  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <!--
    Define your exceptions in a file called global-exceptions.xml and place
    it in your merge directory.
  -->

  <!-- ========== Global Forward Definitions =================================== -->
  <!--
    Define your forwards in a file called global-forwards.xml and place
    it in your merge directory.
  -->

  <!-- ========== Action Mapping Definitions =================================== -->
    <action-mappings>
        <action
            path="/encuesta"
            type="pe.edu.upc.dew.proyectoencuestas.controller.action.EncuestaManagerAction"
            name="encuestasForm"
            scope="request"
            input="/index.jsp"
            parameter="methodToCall"
            unknown="false"
            validate="false"
       >

    <forward
        name="exito"
        path="/encuestas.jsp"
        redirect="false"
      />
    <forward
        name="error"
        path="/encuestas.jsp"
        redirect="false"
      />

    </action>

        <action
            path="/encuestas"
            type="pe.edu.upc.dew.proyectoencuestas.controller.action.EncuestaManagerAction"
            name="encuestasForm"
            scope="request"
            input="/index.jsp"
            parameter="methodToCall"
            unknown="false"
            validate="false"
         >

    <forward
        name="exito"
        path="/encuestas.jsp"
        redirect="false"
      />
    <forward
        name="error"
        path="/encuestas.jsp"
        redirect="false"
      />
      
    </action>
   <!-- Action Servlet Mapping without xdoclet-->

  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

  <message-resources parameter="resources.ApplicationResources"/> 
   <!-- Define your Struts plugins in a file called struts-plugins.xml and place it in your merge directory. -->

</struts-config>
